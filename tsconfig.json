{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"strict": true,
		"moduleResolution": "Node",
		"sourceMap": false,
		"outDir": "dist",
		"rootDir": "src",
		"baseUrl": "./",
		"pretty": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"ts-node": {
		"esm": true
	},
	"include": ["src/**/*.ts"]
}
