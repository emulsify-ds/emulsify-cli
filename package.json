{
  "name": "@emulsify/cli",
  "version": "1.10.2",
  "description": "Command line interface for Emulsify",
  "repository": "git@github.com:emulsify-ds/emulsify-cli.git",
  "author": "Patrick Coffey <patrickcoffey48@gmail.com>",
  "license": "GPL-2.0",
  "private": false,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "bin": {
    "emulsify": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run build-schema-types && npm run build-ts",
    "build-ts": "tsc --build tsconfig.dist.json",
    "build-schema-types": "node --no-warnings=ExperimentalWarning --loader ts-node/esm ./src/scripts/jsonSchemaToTs.ts",
    "watch": "nodemon --watch src --ext ts,json --ignore src/types --exec npm run build",
    "watch-ts": "nodemon --watch src --ext ts,json --ignore src/types --exec npm run build-ts",
    "format": "prettier --write './src/**/*.{js,ts}'",
    "husky:commit-msg": "commitlint --edit $1",
    "husky:pre-commit": "lint-staged",
    "husky:pre-push": "npm run test",
    "test": "jest --coverage --silent --testPathIgnorePatterns=init.test.ts log.test.ts getInitSuccessMessageForPlatform.test.ts getPlatformInfo.test.ts getAvailableStarters.test.ts ",
    "type": "tsc --noEmit",
    "twatch": "jest --no-coverage --watch --verbose",
    "semantic-release": "semantic-release",
    "prepare": "husky install",
    "postbuild": "cp package.json dist/package.json && cd dist && npm install --only=production --ignore-scripts"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@semantic-release/github": "^8.0.2",
    "@semantic-release/npm": "^8.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^26.0.24",
    "@types/node": "^22.1.0",
    "@types/ramda": "^0.30.1",
    "husky": "^5.0.9",
    "jest": "^29.7.0",
    "json-schema-to-typescript": "^15.0.0",
    "lint-staged": "^15.2.7",
    "nodemon": "^2.0.7",
    "prettier": "^3.3.3",
    "semantic-release": "^24.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@types/progress": "^2.0.5",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "consola": "^2.15.3",
    "cosmiconfig": "^9.0.0",
    "fs-extra": "^11.2.0",
    "progress": "^2.0.3",
    "ramda": "^0.27.1",
    "simple-git": "^3.24.0"
  }
}
