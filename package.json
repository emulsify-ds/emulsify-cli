{
  "name": "@emulsify/cli",
  "version": "0.0.0-development",
  "description": "Command line interface for Emulsify",
  "main": "index.js",
  "repository": "git@github.com:emulsify-ds/emulsify-cli.git",
  "author": "Patrick Coffey <patrickcoffey48@gmail.com>",
  "license": "GPL-2.0",
  "private": false,
  "scripts": {
    "build": "tsc --build tsconfig.dist.json",
    "format": "prettier --write './src/**/*.{js,ts}' && npm run lint --fix",
    "husky:commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
    "husky:pre-commit": "npm run lint-staged",
    "husky:pre-push": "npm run lint-staged && npm run test",
    "lint": "eslint --ext .js,.ts .",
    "test": "jest --coverage --silent",
    "type": "tsc --noEmit",
    "twatch": "jest --no-coverage --watch --verbose",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@semantic-release/github": "^7.2.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "semantic-release": "^17.3.8",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.4"
  }
}
